@model TVSeriesApp.Controllers.EditUserViewModel
@{
    ViewData["Title"] = "Edit User Roles";
}

<h1>Edit User: @Model.Email</h1>

<form asp-action="EditUser" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label>Roles:</label>
        @foreach (var role in Model.AllRoles)
        {
            <div class="form-check">
                <input type="checkbox" name="SelectedRoles" value="@role"
                @(Model.UserRoles.Contains(role) ? "checked" : "") />
                <label>@role</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Users" class="btn btn-secondary">Cancel</a>
</form>